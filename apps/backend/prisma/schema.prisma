generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(cuid())
  slug        String   @unique
  name        String
  description String?
  priceCents  Int
  currency    String   @default("USD")
  category    String?
  imageUrl    String?
  assets      Json?    // aquí puedes guardar más datos (ej: modelos 3D)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
