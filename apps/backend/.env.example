# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=5000
NODE_ENV=development

# ============================================
# DATABASE (PostgreSQL via Supabase)
# ============================================
# Primary connection (pgbouncer for connection pooling)
DATABASE_URL="postgresql://user:password@host:6543/postgres?pgbouncer=true"

# Direct connection (for migrations)
DIRECT_URL="postgresql://user:password@host:5432/postgres"

# ============================================
# AUTHENTICATION (JWT)
# ============================================
# JWT secret for signing access tokens
JWT_SECRET=your_super_secret_jwt_key_here

# JWT secret for signing refresh tokens
REFRESH_SECRET=your_super_secret_refresh_key_here

# JWT expiration time (e.g., 7d, 24h)
JWT_EXPIRES_IN=7d

# ============================================
# CLOUDINARY (Image Storage)
# ============================================
# Cloudinary cloud name
CLOUDINARY_CLOUD_NAME=your_cloud_name

# Cloudinary API key
CLOUDINARY_API_KEY=your_api_key

# Cloudinary API secret
CLOUDINARY_API_SECRET=your_api_secret

# ============================================
# EMAIL (SMTP via Outlook)
# ============================================
# SMTP server host
MAIL_HOST=smtp-mail.outlook.com

# SMTP server port (usually 587 for TLS)
MAIL_PORT=587

# SMTP username (your email)
MAIL_USER=your-email@outlook.com

# SMTP password
MAIL_PASS=your_email_password

# Email recipient for contact form/notifications
MAIL_RECEIVER=recipient-email@example.com

# ============================================
# CACHE (Redis)
# ============================================
# Redis connection URL
REDIS_URL=redis://localhost:6379

# ============================================
# PAYMENT (Payphone)
# ============================================
# Payphone API token (get from https://payphone.app/dashboard)
PAYPHONE_TOKEN=your_payphone_token_here

# Payphone Store ID (from your Payphone dashboard)
PAYPHONE_STORE_ID=your_store_id_here

# ============================================
# FRONTEND URLS
# ============================================
# Frontend URL for payment callbacks and redirects
FRONTEND_URL=http://localhost:3000
