{
  "name": "teclike-store-3d",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "concurrently \"pnpm --filter frontend dev\" \"pnpm --filter backend-api dev\"",
    "build": "pnpm --filter frontend build",
    "start": "pnpm --filter frontend start",
    "lint": "run-p lint:*",
    "lint:frontend": "pnpm --filter frontend lint",
    "lint:backend": "cd apps/backend-api && black . && flake8",
    "prisma:generate": "pnpm --filter db generate",
    "prisma:migrate": "pnpm --filter db migrate:dev",
    "docker:up": "docker-compose -f infra/docker-compose.yml up -d",
    "docker:down": "docker-compose -f infra/docker-compose.yml down"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "npm-run-all": "^4.1.5"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.13.1"
}
